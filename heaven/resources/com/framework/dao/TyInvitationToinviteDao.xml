<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.framework.dao.TyInvitationToinviteDao">

	<select id="queryObject" resultType="com.framework.entity.TyInvitationToinviteEntity">
		select * from ty_invitation_toinvite where id = #{value}
	</select>
	
	<select id="queryObjectByKey" resultType="com.framework.entity.TyInvitationToinviteEntity">
		select * from ty_invitation_toinvite
		where id != -1
		<if test="id != null">
			and id = #{id}
		</if>
		<if test="modulId != null">
			and modul_id = #{modulId}
		</if>
		<if test="modulUserId != null">
			and modul_user_id = #{modulUserId}
		</if>
		<if test="userId != null">
			and user_id = #{userId}
		</if>
		<if test="name != null">
			and name = #{name}
		</if>
		<if test="phone != null">
			and phone = #{phone}
		</if>
		<if test="number != null">
			and number = #{number}
		</if>
		<if test="createtime != null">
			and createtime = #{createtime}
		</if>
	</select>

	<select id="queryList" resultType="com.framework.entity.TyInvitationToinviteEntity">
		select * from ty_invitation_toinvite 
		where id != -1
		<if test="userId != null">
			and user_id = #{userId}
		</if>
		<if test="modulUserId != null">
			and modul_user_id = #{modulUserId}
		</if>
		order by createtime DESC
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from ty_invitation_toinvite 
		where id != -1
		<if test="userId != null">
			and user_id = #{userId}
		</if>
		<if test="modulUserId != null">
			and modul_user_id = #{modulUserId}
		</if>
	</select>
	 
	<insert id="save" parameterType="com.framework.entity.TyInvitationToinviteEntity" useGeneratedKeys="true" keyProperty="id">
		insert into ty_invitation_toinvite
		(
			`modul_id`, 
			`modul_user_id`, 
			`user_id`, 
			`name`, 
			`phone`, 
			`number`, 
			`createtime`
		)
		values
		(
			#{modulId}, 
			#{modulUserId}, 
			#{userId}, 
			#{name}, 
			#{phone}, 
			#{number}, 
			#{createtime}
		)
	</insert>
	 
	<update id="update" parameterType="com.framework.entity.TyInvitationToinviteEntity">
		update ty_invitation_toinvite 
		<set>
			<if test="modulId != null">`modul_id` = #{modulId}, </if>
			<if test="modulUserId != null">`modul_user_id` = #{modulUserId}, </if>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="phone != null">`phone` = #{phone}, </if>
			<if test="number != null">`number` = #{number}, </if>
			<if test="createtime != null">`createtime` = #{createtime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from ty_invitation_toinvite where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from ty_invitation_toinvite where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>